#include <stdio.h>
#include <string.h>

typedef struct {
    char estado[30];
    int codigo;
    char nome[50];
    int populacao;
    float area;
    float pib;
    int pontosTuristicos;
} CartaCidade;

void exibirCarta(CartaCidade carta) {
    printf("\nğŸ“ Carta da Cidade:\n");
    printf("Estado: %s\n", carta.estado);
    printf("CÃ³digo: %d\n", carta.codigo);
    printf("Cidade: %s\n", carta.nome);
    printf("PopulaÃ§Ã£o: %d habitantes\n", carta.populacao);
    printf("Ãrea: %.2f kmÂ²\n", carta.area);
    printf("PIB: R$ %.2f bilhÃµes\n", carta.pib);
    printf("Pontos TurÃ­sticos: %d\n", carta.pontosTuristicos);
}

int main() {
    CartaCidade carta1, carta2;

    // Cadastro da Carta 1
    printf("=== Cadastro da Carta 1 ===\n");
    printf("Estado: ");
    fgets(carta1.estado, sizeof(carta1.estado), stdin);
    carta1.estado[strcspn(carta1.estado, "\n")] = '\0'; // remove \n

    printf("CÃ³digo: ");
    scanf("%d", &carta1.codigo);
    getchar(); // limpar buffer

    printf("Cidade: ");
    fgets(carta1.nome, sizeof(carta1.nome), stdin);
    carta1.nome[strcspn(carta1.nome, "\n")] = '\0';

    printf("PopulaÃ§Ã£o: ");
    scanf("%d", &carta1.populacao);

    printf("Ãrea (kmÂ²): ");
    scanf("%f", &carta1.area);

    printf("PIB (em bilhÃµes): ");
    scanf("%f", &carta1.pib);

    printf("NÂº de Pontos TurÃ­sticos: ");
    scanf("%d", &carta1.pontosTuristicos);
    getchar();

    // Cadastro da Carta 2
    printf("\n=== Cadastro da Carta 2 ===\n");
    printf("Estado: ");
    fgets(carta2.estado, sizeof(carta2.estado), stdin);
    carta2.estado[strcspn(carta2.estado, "\n")] = '\0';

    printf("CÃ³digo: ");
    scanf("%d", &carta2.codigo);
    getchar();

    printf("Cidade: ");
    fgets(carta2.nome, sizeof(carta2.nome), stdin);
    carta2.nome[strcspn(carta2.nome, "\n")] = '\0';

    printf("PopulaÃ§Ã£o: ");
    scanf("%d", &carta2.populacao);

    printf("Ãrea (kmÂ²): ");
    scanf("%f", &carta2.area);

    printf("PIB (em bilhÃµes): ");
    scanf("%f", &carta2.pib);

    printf("NÂº de Pontos TurÃ­sticos: ");
    scanf("%d", &carta2.pontosTuristicos);

    // Exibir cartas
    exibirCarta(carta1);
    exibirCarta(carta2);

    // ComparaÃ§Ã£o - exemplo: PopulaÃ§Ã£o
    printf("\nğŸ” ComparaÃ§Ã£o pelo atributo: PopulaÃ§Ã£o\n");
    if (carta1.populacao > carta2.populacao) {
        printf("ğŸ† Vencedora: %s (mais populosa)\n", carta1.nome);
    } else if (carta1.populacao < carta2.populacao) {
        printf("ğŸ† Vencedora: %s (mais populosa)\n", carta2.nome);
    } else {
        printf("âš–ï¸ Empate na populaÃ§Ã£o!\n");
    }

    return 0;
}
