#include <stdio.h>
#include <string.h>

typedef struct {
    char estado[30];
    int codigo;
    char nome[50];
    int populacao;
    float area;
    float pib;
    int pontosTuristicos;
} CartaCidade;

void exibirCarta(CartaCidade carta) {
    printf("\nğŸ“ Carta da Cidade:\n");
    printf("Estado: %s\n", carta.estado);
    printf("CÃ³digo: %d\n", carta.codigo);
    printf("Cidade: %s\n", carta.nome);
    printf("PopulaÃ§Ã£o: %d habitantes\n", carta.populacao);
    printf("Ãrea: %.2f kmÂ²\n", carta.area);
    printf("PIB: R$ %.2f bilhÃµes\n", carta.pib);
    printf("Pontos TurÃ­sticos: %d\n", carta.pontosTuristicos);
}

void compararCartas(CartaCidade c1, CartaCidade c2, int opcao) {
    switch(opcao) {
        case 1:
            printf("\nğŸ” Comparando PopulaÃ§Ã£o...\n");
            if (c1.populacao > c2.populacao)
                printf("ğŸ† Vencedora: %s (mais populosa)\n", c1.nome);
            else if (c1.populacao < c2.populacao)
                printf("ğŸ† Vencedora: %s (mais populosa)\n", c2.nome);
            else
                printf("âš–ï¸ Empate em populaÃ§Ã£o!\n");
            break;
        case 2:
            printf("\nğŸ” Comparando Ãrea...\n");
            if (c1.area > c2.area)
                printf("ğŸ† Vencedora: %s (maior Ã¡rea)\n", c1.nome);
            else if (c1.area < c2.area)
                printf("ğŸ† Vencedora: %s (maior Ã¡rea)\n", c2.nome);
            else
                printf("âš–ï¸ Empate em Ã¡rea!\n");
            break;
        case 3:
            printf("\nğŸ” Comparando PIB...\n");
            if (c1.pib > c2.pib)
                printf("ğŸ† Vencedora: %s (maior PIB)\n", c1.nome);
            else if (c1.pib < c2.pib)
                printf("ğŸ† Vencedora: %s (maior PIB)\n", c2.nome);
            else
                printf("âš–ï¸ Empate em PIB!\n");
            break;
        case 4:
            printf("\nğŸ” Comparando Pontos TurÃ­sticos...\n");
            if (c1.pontosTuristicos > c2.pontosTuristicos)
                printf("ğŸ† Vencedora: %s (mais pontos turÃ­sticos)\n", c1.nome);
            else if (c1.pontosTuristicos < c2.pontosTuristicos)
                printf("ğŸ† Vencedora: %s (mais pontos turÃ­sticos)\n", c2.nome);
            else
                printf("âš–ï¸ Empate em pontos turÃ­sticos!\n");
            break;
        default:
            printf("âŒ OpÃ§Ã£o invÃ¡lida!\n");
    }
}

int main() {
    CartaCidade carta1, carta2;
    int opcao;

    // Cadastro da Carta 1
    printf("=== Cadastro da Carta 1 ===\n");
    printf("Estado: "); fgets(carta1.estado, sizeof(carta1.estado), stdin);
    carta1.estado[strcspn(carta1.estado, "\n")] = '\0';

    printf("CÃ³digo: "); scanf("%d", &carta1.codigo); getchar();

    printf("Cidade: "); fgets(carta1.nome, sizeof(carta1.nome), stdin);
    carta1.nome[strcspn(carta1.nome, "\n")] = '\0';

    printf("PopulaÃ§Ã£o: "); scanf("%d", &carta1.populacao);
    printf("Ãrea (kmÂ²): "); scanf("%f", &carta1.area);
    printf("PIB (em bilhÃµes): "); scanf("%f", &carta1.pib);
    printf("NÂº de Pontos TurÃ­sticos: "); scanf("%d", &carta1.pontosTuristicos);
    getchar();

    // Cadastro da Carta 2
    printf("\n=== Cadastro da Carta 2 ===\n");
    printf("Estado: "); fgets(carta2.estado, sizeof(carta2.estado), stdin);
    carta2.estado[strcspn(carta2.estado, "\n")] = '\0';

    printf("CÃ³digo: "); scanf("%d", &carta2.codigo); getchar();

    printf("Cidade: "); fgets(carta2.nome, sizeof(carta2.nome), stdin);
    carta2.nome[strcspn(carta2.nome, "\n")] = '\0';

    printf("PopulaÃ§Ã£o: "); scanf("%d", &carta2.populacao);
    printf("Ãrea (kmÂ²): "); scanf("%f", &carta2.area);
    printf("PIB (em bilhÃµes): "); scanf("%f", &carta2.pib);
    printf("NÂº de Pontos TurÃ­sticos: "); scanf("%d", &carta2.pontosTuristicos);

    // Exibe cartas
